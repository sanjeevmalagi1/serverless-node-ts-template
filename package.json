{
  "name": "serverless-node-ts-template",
  "version": "1.0.0",
  "description": "My basic template for running whole node js app on a single serverless endpoint",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "offline": "npx serverless offline",
    "test": "jest -i --colors --verbose --forceExit --detectOpenHandles",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "serverless": "^3.0.0",
    "serverless-offline": "^13.9.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "prom-client": "^15.1.3",
    "serverless-http": "^3.2.0"
  }
}
